{
  "name": "botforce-unity",
  "version": "0.1.0",
  "private": true,
  "description": "BOTFORCE Unity - Invoicing, Time Tracking & Accounting Prep",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "test": "pnpm --filter web test",
    "test:coverage": "pnpm --filter web test:coverage",
    "typecheck": "pnpm --filter web exec tsc --noEmit",
    "db:reset": "supabase db reset",
    "db:push": "supabase db push",
    "db:diff": "supabase db diff",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "prepare": "husky"
  },
  "keywords": [
    "invoicing",
    "time-tracking",
    "accounting",
    "supabase",
    "nextjs"
  ],
  "author": "BOTFORCE GmbH",
  "license": "UNLICENSED",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.11"
  },
  "lint-staged": {
    "apps/web/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "apps/web/src/**/*.{ts,tsx,json,css}": [
      "prettier --write"
    ]
  }
}
